/*
 * ZMK Keymap với Rotary Encoder
 * Lưu tại: config/[tên_bàn_phím].keymap
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define BASE 0
#define FN 1

/ {
    // 1️⃣ Khai báo encoder (đặt ngoài keymap)
    sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder_1>; // Tên encoder (phải khớp với shield)
        triggers-per-rotation = <24>; // Số bước/vòng
    };

    keymap {
        compatible = "zmk,keymap";

        // 2️⃣ Layer chính
        default_layer {
            bindings = <
                &kp Q     &kp W     &kp E
                &kp A     &kp S     &kp D
            >;
            
            // 🔄 Cấu hình encoder cho layer này
            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP>; // Xoay: Volume
        };

        // 3️⃣ Layer phím chức năng
        fn_layer {
            bindings = <
                &kp F1    &kp F2    &kp F3
                &bt BT_CLR &bootloader &none
            >;
            
            // 🔄 Encoder đổi chức năng khi sang layer FN
            sensor-bindings = <&inc_dec_kp PG_DN PG_UP>; // Xoay: Cuộn trang
        };
    };
};
